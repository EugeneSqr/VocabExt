<Window x:Class="VX.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="339" Loaded="WindowLoaded">
    <Grid>
        <ListBox Height="287" HorizontalAlignment="Left" Margin="12,12,0,0" Name="wordsList" VerticalAlignment="Top" Width="294">            
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Spelling}"></TextBlock>
                        <TextBlock Text="{Binding Transcription}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
